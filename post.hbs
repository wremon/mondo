{{!< default}}

{{#post}}
    <div class="post columns is-multiline is-variable is-8">

        <div class="column is-three-fifths is-offset-one-fifth divider first-divider"><hr></div>

        {{!-- Post Section --}}
        <div class="column is-three-fifths is-offset-one-fifth is-paddingless-top">
            <main id="site-main" class="site-main outer">
                <div class="inner">

                    <article class="post-full content {{post_class}}">

                        <header class="post-header{{#if feature_image}} has-featured-image{{/if}}">
                            {{#if tags}}
                                <div class="post-tags">{{tags separator=""}}</div>
                            {{/if}}

                            <h1 class="post-title is-size-2 has-text-centered">{{title}}</h1>

                            {{#if custom_excerpt}}
                                <p class="custom-excerpt is-italic">{{custom_excerpt}}</p>
                            {{/if}}

                            <span class="byline-date has-text-muted">
                                <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time>
                            </span>

                            {{#if feature_image}}
                            <figure class="post-full-image">
                                <img
                                    srcset="{{img_url feature_image size="s"}} 300w,
                                            {{img_url feature_image size="m"}} 600w,
                                            {{img_url feature_image size="l"}} 1000w,
                                            {{img_url feature_image size="xl"}} 2000w"
                                    sizes="(max-width: 800px) 1000px,
                                            (max-width: 1170px) 1170px, 2000px"
                                    src="{{img_url feature_image size="xl"}}"
                                    class="lazyload"
                                    alt="{{title}}"
                                />
                            </figure>
                            {{/if}}
                        </header>

                        <div class="post-content">
                            {{content}}
                        </div>

                        <footer class="post-footer">

                            <div class="divider"><hr></div>

                            <ul class="author-list tagged">
                                {{#foreach authors}}
                                    <li class="author-list-item">
                                        <a href="{{url}}">
                                            {{#if profile_image}}
                                                <img class="author-profile-image image is-hidden-mobile" src="{{img_url profile_image size="xs"}}" alt="{{name}}" />
                                            {{/if}}
                                            <span class="author-name title is-size-5{{#unless profile_image}} no-author-profile-image{{/unless}}">{{name}}</span>
                                        </a>
                                    </li>
                                {{/foreach}}
                            </ul>
                        </footer>

                    </article>

                    {{#if access}}
                        {{!-- Disqus comments --}}
                        {{> "disqus"}}
                    {{/if}}

                </div>
            </main>
        </div>

        {{!-- If there's a next post, display it using the same markup included from - partials/post-card.hbs --}}
        {{#next_post}}
            {{> "post-card"}}
        {{else}}
            {{> "related-posts"}}
        {{/next_post}}

        {{!-- If there's a previous post, display it using the same markup included from - partials/post-card.hbs --}}
        {{#prev_post}}
            {{> "post-card"}}
        {{else}}
            {{> "related-posts"}}
        {{/prev_post}}
    </div>

{{/post}}
